@page "/documents"
@rendermode InteractiveServer

<PageTitle>Document Manager - QHMCPro</PageTitle>

<div class="page-header">
    <div class="page-header-left">
        <h1>Document Manager</h1>
        <p>Manage compliance documents, contracts, and files</p>
    </div>
    <div class="page-header-actions"><button class="btn btn-primary"><i class="fa fa-upload"></i> Upload
            Document</button></div>
</div>

<div class="card">
    <div class="card-body">
        <div class="empty-state">
            <i class="fa fa-folder-open"></i>
