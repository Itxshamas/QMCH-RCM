@page "/caregiver/medical/schedule/list/create"
@rendermode InteractiveServer



<PageTitle>@(isEdit ? "Edit Medical Appointment" : "Add Medical Appointment") - QHMCPro</PageTitle>

<div class="page-header">
    <div class="page-header-left">
        <h1>MEDICAL APPOINTMENTS</h1>
    </div>
</div>

<div class="medical-details-container">
    <div class="medical-details-header">
        <span class="header-title">Medical Details</span>
    </div>

    <EditForm Model="model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary class="alert alert-danger" />

        <div class="form-section">
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Nurse</label>
                    <select class="form-control" @bind="model.EmployeeName">
                        <option value="">Select Nurse</option>
                        @foreach (var employee in employees)
                        {
                            <option value="@($"{employee.FirstName} {employee.LastName}")">@($"{employee.FirstName} {employee.LastName}")</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Medical Status</label>
                    <select class="form-control" @bind="model.Status">
                        <option value="">In Process</option>
                        <option value="Scheduled">Scheduled</option>
                        <option value="Completed">Completed</option>
                        <option value="Pending">Pending</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Operation Staff Assigned</label>
                    <select class="form-control" @bind="model.Provider">
                        <option value="">Select Staff</option>
                        @foreach (var employee in employees)
                        {
                            <option value="@($"{employee.FirstName} {employee.LastName}")">@($"{employee.FirstName} {employee.LastName}")</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Medical Location</label>
                    <input type="text" class="form-control" @bind="model.Location" placeholder="Enter medical location" />
                </div>
            </div>

            <div class="form-row three-columns">
                <div class="form-group">
                    <label class="form-label">Medical Date</label>
                    <input type="date" class="form-control" @bind="model.ScheduledDate" />
                </div>

                <div class="form-group">
                    <label class="form-label">Medical Time</label>
                    <input type="text" class="form-control" placeholder="HH:MM" />
                </div>

                <div class="form-group">
                    <label class="form-label">Medical Name</label>
                    <input type="text" class="form-control" @bind="model.ExamType" placeholder="Enter exam type" />
                </div>
            </div>


            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Notes</label>
                    <textarea class="form-control" @bind="model.Notes" rows="4" placeholder="Enter additional notes..."></textarea>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="button" class="btn-cancel" @onclick="Cancel">
                <i class="fa fa-times"></i> Cancel
            </button>
            <button type="submit" class="btn-submit">
                <i class="fa fa-save"></i> Save
            </button>
        </div>
    </EditForm>
</div>


