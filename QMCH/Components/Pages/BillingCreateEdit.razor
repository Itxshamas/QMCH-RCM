@page "/timesheet/billing/list/create"
@inject ITimesheetService TimesheetService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(isEdit ? "Edit" : "Create") Billing - QHMCPro</PageTitle>

<div class="page-header">
    <div class="page-header-left">
        <h1>@(isEdit ? "Edit" : "Create") Billing Record</h1>
    </div>
    <div class="page-header-actions"><button class="btn btn-outline"
            @onclick='() => Navigation.NavigateTo("/timesheet/billing/list")'><i class="fa fa-arrow-left"></i>
            Back</button></div>
</div>

<div class="card">
    <div class="card-header">
        <h3><i class="fa fa-file-invoice-dollar" style="margin-right: 8px;"></i> Billing Details</h3>
    </div>
    <div class="card-body">
        <EditForm Model="model" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <div class="form-row">
                <div class="form-group"><label class="form-label">Client Name *</label>
                    <InputText @bind-Value="model.ClientName" class="form-control" />
                </div>
                <div class="form-group"><label class="form-label">Invoice Number</label>
                    <InputText @bind-Value="model.InvoiceNumber" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group"><label class="form-label">Service Type</label>
                    <InputText @bind-Value="model.ServiceType" class="form-control" />
                </div>
                <div class="form-group"><label class="form-label">Status</label>
                    <InputSelect @bind-Value="model.Status" class="form-control">
                        <option>Draft</option>
                        <option>Submitted</option>
                        <option>Pending</option>
                        <option>Paid</option>
                        <option>Overdue</option>
                    </InputSelect>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group"><label class="form-label">Period Start</label>
                    <InputDate @bind-Value="model.PeriodStart" class="form-control" />
                </div>
                <div class="form-group"><label class="form-label">Period End</label>
                    <InputDate @bind-Value="model.PeriodEnd" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group"><label class="form-label">Total Hours</label>
                    <InputNumber @bind-Value="model.TotalHours" class="form-control" />
                </div>
                <div class="form-group"><label class="form-label">Billing Rate ($)</label>
                    <InputNumber @bind-Value="model.BillingRate" class="form-control" />
                </div>
            </div>
            <div class="form-group"><label class="form-label">Notes</label>
                <InputTextArea @bind-Value="model.Notes" class="form-control" rows="2" />
            </div>
            <div style="display: flex; gap: 12px; margin-top: 24px;">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> @(isEdit ? "Update" :
                    "Create")</button>
                <button type="button" class="btn btn-outline"
                    @onclick='() => Navigation.NavigateTo("/timesheet/billing/list")'>Cancel</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromQuery] public int? Id { get; set; }
    private TimesheetBilling model = new()
        {
            PeriodStart = DateTime.Today.AddDays(-14),
            PeriodEnd = DateTime.Today,
            Status =
        "Draft"
        }; private bool isEdit;
    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            var e = await
    TimesheetService.GetBillingByIdAsync(Id.Value); if (e != null) { model = e; isEdit = true; }
        }
    }
    private async Task Save()
    {
        if (isEdit) await TimesheetService.UpdateBillingAsync(model);
        else await
    TimesheetService.CreateBillingAsync(model); Navigation.NavigateTo("/timesheet/billing/list");
    }
}
