@page "/hr/aquisition/applicants/list"
@inject IHRService HRService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Candidate Management - QHMCPro</PageTitle>

<div class="applicant-container">
    <div class="applicant-header">
        <h1>CANDIDATE MANAGEMENT</h1>
        <button class="btn-new" @onclick='() => Navigation.NavigateTo("/hr/aquisition/applicants/list/create")'>
            <i class="fa fa-plus"></i> New
        </button>
    </div>

    <div class="applicant-filters">
        <div class="filter-group">
            <label>Filter By Status</label>
            <select class="filter-select" @onchange="(ChangeEventArgs e) => FilterByStatus(e.Value?.ToString())">
                <option value="">Not Scheduled</option>
                <option value="New">New</option>
                <option value="Screening">Screening</option>
                <option value="Interview">Interview</option>
                <option value="Offer">Offer</option>
                <option value="Hired">Hired</option>
                <option value="Rejected">Rejected</option>
                <option value="Account">Account</option>
            </select>
        </div>

        <div class="filter-group">
            <label>Filter By Candidate</label>
            <select class="filter-select" @onchange="(ChangeEventArgs e) => FilterByCandidate(e.Value?.ToString())">
                <option value="">All Candidate</option>
                @foreach(var applicant in allItems.DistinctBy(a => a.FirstName).OrderBy(a => a.FirstName))
                {
                    <option value="@($"{applicant.FirstName} {applicant.LastName}")">@applicant.FirstName @applicant.LastName</option>
                }
            </select>
        </div>

        <div class="search-group">
            <input type="text" class="search-input" placeholder="Search" @onkeyup="(KeyboardEventArgs e) => HandleSearch(e.Key)" @bind="searchText" />
        </div>
    </div>

    <div class="applicant-table-wrapper">
        <table class="applicant-table">
            <thead>
                <tr>
                    <th class="checkbox-col"><input type="checkbox" @onchange="(ChangeEventArgs e) => SelectAllApplicants((bool)e.Value)" /></th>
                    <th class="action-col"></th>
                    <th>Candidate First Name</th>
                    <th>Candidate Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Job Order Code</th>
                    <th>Job Title</th>
                    <th>Candidate Status</th>
                    <th>Job Order Status</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="10" class="text-center">Loading...</td>
                    </tr>
                }
                else if (!filteredItems.Any())
                {
                    <tr>
                        <td colspan="10" class="text-center">No applicants found</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in GetPaginatedItems())
                    {
                        <tr>
                            <td class="checkbox-col"><input type="checkbox" @onchange="(ChangeEventArgs e) => ToggleApplicantSelection(item.Id, (bool)e.Value)" /></td>
                            <td class="action-col">
                                <div class="action-buttons">
                                    <button class="action-btn edit" title="Edit" @onclick='() => Navigation.NavigateTo("/hr/aquisition/applicants/list/create?id=" + item.Id)'><i class="fa fa-edit"></i></button>
                                    <button class="action-btn copy" title="Copy"><i class="fa fa-copy"></i></button>
                                    <button class="action-btn print" title="Print"><i class="fa fa-print"></i></button>
                                    <button class="action-btn delete" title="Delete" @onclick="() => DeleteApplicant(item.Id)"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>REG0002</td>
                            <td>Registered General Nurse</td>
                            <td><span class="status-badge @GetStatusClass(item.Status)">@item.Status</span></td>
                            <td>Not Scheduled</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="applicant-pagination">
        <div class="pagination-info">
            Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, filteredItems.Count) of @filteredItems.Count entries
        </div>
        <div class="pagination-controls">
            <button class="page-btn" @onclick="() => previousPage()" disabled="@(currentPage == 1)">Previous</button>
            @for (int i = 1; i <= totalPages; i++)
            {
                int pageNum = i;
                <button class="page-btn @(currentPage == pageNum ? "active" : "")" @onclick="() => GoToPage(pageNum)">@i</button>
            }
            <button class="page-btn" @onclick="() => nextPage()" disabled="@(currentPage == totalPages)">Next</button>
        </div>
    </div>
</div>
