@page "/hmc/patients"
@using QMCH.Models
@using QMCH.Interfaces.Services
@inject IPatientService PatientService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Patient Management - Quality Homecare</PageTitle>

<div class="patient-list-page">
    <!-- Error Alert -->
    @if (hasError)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => hasError = false)" aria-label="Close"></button>
        </div>
    }

    <div class="page-header">
        <div class="header-left">
            <h1>PATIENT MANAGEMENT</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Patients</li>
                </ol>
            </nav>
        </div>
        <div class="header-right">
            <button class="btn btn-primary" @onclick="CreateNew" aria-label="Create new patient">
                <i class="fas fa-plus" aria-hidden="true"></i> NEW PATIENT
            </button>
        </div>
    </div>

    <div class="content-container">
        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-icon patient-icon">
                    <i class="fas fa-user-injured" aria-hidden="true"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-label">Total Patients</span>
                    <span class="stat-value">@totalPatients</span>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon active-icon">
                    <i class="fas fa-check-circle" aria-hidden="true"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-label">Active</span>
                    <span class="stat-value">@activePatients</span>
                </div>
            </div>
        </div>

        <!-- Filter Card -->
        <div class="filter-card">
            <div class="search-box">
                <i class="fas fa-search" aria-hidden="true"></i>
                <input type="text" placeholder="Search by name, ID or SSN..." @bind="searchTerm" @bind:event="oninput"
                    @bind:after="ApplyFilters" aria-label="Search patients" />
            </div>
            <div class="filter-actions">
                <select class="form-select" @bind="statusFilter" @bind:after="ApplyFilters" aria-label="Filter by status">
                    <option value="">All Statuses</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
        </div>

        <!-- Table Container -->
        <div class="table-container">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading patients...</span>
                    </div>
                    <p class="mt-2">Loading patients...</p>
                </div>
            }
            else if (filteredPatients == null || !filteredPatients.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-slash fa-3x text-muted mb-3" aria-hidden="true"></i>
                    <p>No patients found matching your criteria.</p>
                </div>
            }
            else
            {
                <table class="table custom-table" role="table">
                    <thead>
                        <tr>
                            <th scope="col">Patient ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Date of Birth</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in filteredPatients)
                        {
                            <tr>
                                <td class="fw-bold text-primary" data-label="Patient ID">@patient.PatientId</td>
                                <td data-label="Name">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-2">@patient.FirstName[0]@patient.LastName[0]</div>
                                        <div>
                                            <div class="fw-bold">@patient.FullName</div>
                                            <div class="text-muted small">@patient.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td data-label="Date of Birth">@patient.DateOfBirth.ToString("MM/dd/yyyy")</td>
                                <td data-label="Gender">@patient.Gender</td>
                                <td data-label="Status">
                                    <span class="status-badge @(patient.Status.ToLower())">@patient.Status</span>
                                </td>
                                <td data-label="Actions">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-info" @onclick="() => ViewDetails(patient.Id)"
                                            title="View Details" aria-label="View patient details">
                                            <i class="fas fa-eye" aria-hidden="true"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => EditPatient(patient.Id)"
                                            title="Edit" aria-label="Edit patient">
                                            <i class="fas fa-edit" aria-hidden="true"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletePatient(patient.Id)"
                                            title="Delete" aria-label="Delete patient">
                                            <i class="fas fa-trash" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    // Parameters and fields only - Logic moved to .razor.cs
}

