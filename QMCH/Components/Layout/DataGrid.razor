@* DataGrid.razor - Reusable data grid with search and pagination *@
@typeparam TItem

<div class="data-grid">
    <div class="data-grid-header">
        <h3>@Title</h3>
        <div class="data-grid-toolbar">
            @if (ShowSearch)
            {
                <input type="text" class="search-input" placeholder="Search..."
                       @bind="SearchTerm" @bind:event="oninput" @onkeyup="OnSearch" />
            }
            @if (ToolbarContent != null)
            {
                @ToolbarContent
            }
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="spinner-container">
            <div class="spinner"></div>
        </div>
    }
    else if (Items == null || !Items.Any())
    {
        <div class="empty-state">
            <i class="fa fa-inbox"></i>
            <h3>No Records Found</h3>
            <p>@EmptyMessage</p>
        </div>
    }
    else
    {
        <div style="overflow-x: auto;">
            <table class="data-table">
                <thead>
                    <tr>
                        @HeaderTemplate
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Items)
                    {
                        <tr>
                            @RowTemplate(item)
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="data-grid-footer">
            <span>Showing @Items.Count() records</span>
            @if (FooterContent != null)
            {
                @FooterContent
            }
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "Records";
    [Parameter] public IEnumerable<TItem>? Items { get; set; }
    [Parameter] public RenderFragment? HeaderTemplate { get; set; }
    [Parameter] public RenderFragment<TItem>? RowTemplate { get; set; }
    [Parameter] public RenderFragment? ToolbarContent { get; set; }
    [Parameter] public RenderFragment? FooterContent { get; set; }
    [Parameter] public bool ShowSearch { get; set; } = true;
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string EmptyMessage { get; set; } = "No records to display.";
    [Parameter] public EventCallback<string> OnSearchChanged { get; set; }

    private string SearchTerm { get; set; } = string.Empty;

    private async Task OnSearch()
    {
        await OnSearchChanged.InvokeAsync(SearchTerm);
    }
}
